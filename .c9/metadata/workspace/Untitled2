e][caseArrivee.colonne] = t[caseDepart.ligne][caseDepart.colonne];         //je deplace la piece","        t[caseDepart.ligne][caseDepart.colonne] = ' ';","        printf(\"Déplacement effectué !\\n\");","    }","}","","//-------------------------- Module changementDePiece -----------------------//","/*void changementDePiece()","{","    printf(\"je suis entré dans la méthode changementDePiece\\n\");","    changePiece = 0;","    char pieceChoisie = toupper(t[caseDepart.ligne][caseDepart.colonne]);","    int choix;","    //ECHEC = 1;---------------------------------- FIX","    ","    //while(ECHEC == 1)---------------------------------- FIX","    //{---------------------------------- FIX","        choix = -1;","        printf(\"---------------------------------\\n\");","        printf(\"--  1- Déplacer la piece       --\\n\");","        printf(\"--  2- Choisir une autre piece --\\n\");","        if(joueurActif == 1  && (pieceChoisie == 'T' || pieceChoisie == 'K'))","        {","            if(pasTouchayK1 /*roqueJ1 < 2*//*)","            {","                if((pasTouchayTP1 && t[7][5] == ' ' && t[7][6] == ' ')","                || (pasTouchayTG1 && t[7][1] == ' ' && t[7][2] == ' ' && t[7][3] == ' '))","                {","                    printf(\"--  3- Faire un roque          --\\n\");","                }","            }","        }","        else if(joueurActif == 2  && (pieceChoisie == 'T' || pieceChoisie == 'K'))","        {","            if(pasTouchayK2 /*roqueJ2 < 2*//*)","            {","                if((pasTouchayTP2 && t[0][5] == ' ' && t[0][6] == ' ')","                || (pasTouchayTG2 && t[0][1] == ' ' && t[0][2] == ' ' && t[0][3] == ' '))","                {","                    printf(\"--  3- Faire un roque          --\\n\");","                }","            }","        }","        ","        printf(\"---------------------------------\\n\");","        ","        while(choix != 1 && choix != 2 && choix !=3)","        {","            printf(\"Ch